# BTEC Backend Environment Variables
# Copy this to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=btec_user
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=btec_db

# Alternative: Full DATABASE_URL (if not using individual variables)
# DATABASE_URL=postgresql://user:password@localhost:5432/btec_db

# ============================================================================
# Security & Authentication
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change_this_to_a_random_secret_key_min_32_chars

# JWT Token expiration (in minutes, default: 8 days)
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# ============================================================================
# Application Configuration
# ============================================================================
PROJECT_NAME="BTEC Smart Platform"
API_V1_STR=/api/v1
ENVIRONMENT=local  # local, staging, or production
FRONTEND_HOST=http://localhost:5173

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# First Superuser (Admin Account)
# ============================================================================
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis123

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_TLS=true
SMTP_SSL=false
EMAILS_FROM_EMAIL=noreply@btec-platform.com
EMAILS_FROM_NAME="BTEC Platform"

# ============================================================================
# Test User (for automated tests)
# ============================================================================
EMAIL_TEST_USER=test@example.com

# ============================================================================
# External Services (Optional)
# ============================================================================
# Sentry for error tracking (production)
SENTRY_DSN=

# Redis (if using caching/celery)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ============================================================================
# Render Deployment (for CI/CD)
# ============================================================================
# Get these from Render dashboard
RENDER_API_KEY=your_render_api_key
RENDER_SERVICE_ID=your_render_service_id

# ============================================================================
# Docker Hub (Optional - for CI/CD)
# ============================================================================
DOCKER_USERNAME=your_dockerhub_username
DOCKER_PASSWORD=your_dockerhub_token

# ============================================================================
# Development Settings
# ============================================================================
DEBUG=true
