# Environment Variables Example
# Copy this file to .env and update with your values

# Database Configuration
# For local development (SQLite)
DATABASE_URL=sqlite:///./dev.db

# For production (PostgreSQL on Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# Security Configuration
# Generate a secure secret key using: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# CORS Configuration
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","*"]

# Email Configuration (Optional - for future use)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@example.com
EMAILS_FROM_NAME=BTEC Backend

# Initial Superuser (for bootstrapping)
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# Render Configuration (only needed for deployment)
# These will be set in Render dashboard
# RENDER_SERVICE_ID=your-service-id
# RENDER_API_KEY=your-api-key
